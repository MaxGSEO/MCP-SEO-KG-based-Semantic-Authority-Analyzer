# Crawl4AI Microservice Configuration

# Server settings
CRAWL4AI_HOST=0.0.0.0
CRAWL4AI_PORT=8000

# Browser settings
CRAWL4AI_BROWSER_TYPE=chromium
CRAWL4AI_HEADLESS=true
CRAWL4AI_TIMEOUT=30000

# Rate limiting
CRAWL4AI_DELAY_MIN=1.0
CRAWL4AI_DELAY_MAX=3.0
CRAWL4AI_MAX_RETRIES=3

# Content filtering
CRAWL4AI_MIN_WORD_THRESHOLD=10

# Cache settings
CRAWL4AI_CACHE_ENABLED=true
CRAWL4AI_CACHE_TTL=3600
