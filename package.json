{
  "name": "seo-semantic-mcp",
  "version": "1.0.0",
  "description": "MCP server for semantic SEO analysis with entity extraction and betweenness centrality",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "seo-semantic-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector npx tsx src/index.ts",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.6.2",
    "bottleneck": "^2.19.5",
    "cheerio": "^1.0.0-rc.12",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "seo",
    "semantic",
    "entity-extraction",
    "knowledge-graph",
    "betweenness-centrality"
